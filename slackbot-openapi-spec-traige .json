{
  "info": {
    "title": "Events API for Watson Assistant",
    "version": "1.0.1"
  },
  "tags": [],
  "servers": [
    {
      "description": "Code Engine deployment",
      "url": "https://{appname}.{projectid}.{region}.codeengine.appdomain.cloud",
      "variables": {
        "appname": {
          "default": "slackbottriage-backend",
          "description": "application name"
        },
        "projectid": {
          "default": "1mqn6ctvxequ",
          "description": "the Code Engine project ID"
        },
        "region": {
          "default": "us-south",
          "description": "the deployment region, e.g., us-south"
        }
      }
    },
    {
      "description": "local test",
      "url": "http://127.0.0.1:{port}",
      "variables": {
        "port": {
          "default": "5000",
          "description": "local port to use"
        }
      }
    }
  ],
  "paths": {
    "/": {
      "get": {
        "parameters": [],
        "responses": {
          "200": {
            "content": {
              "application/json": {
                "schema": {}
              }
            },
            "description": "Successful response"
          }
        },
        "summary": "Greeting",
        "description": "health check"
      }
    },
    "/patients": {
      "get": {
        "parameters": [
          {
            "in": "query",
            "name": "per_page",
            "required": false,
            "schema": {
              "type": "integer",
              "default": 20,
              "maximum": 30
            }
          },
          {
            "in": "query",
            "name": "page",
            "required": false,
            "schema": {
              "type": "integer",
              "default": 1
            }
          }
        ],
        "responses": {
          "200": {
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/EventsOut"
                }
              }
            },
            "description": "Successful response"
          },
          "400": {
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ValidationError"
                }
              }
            },
            "description": "Validation error"
          },
          "401": {
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/HTTPError"
                }
              }
            },
            "description": "Authentication error"
          }
        },
        "summary": "all events",
        "description": "Retrieve all event records",
        "security": [
          {
            "ApiKeyAuth": []
          }
        ]
      },
      "post": {
        "parameters": [],
        "responses": {
          "201": {
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/EventOut"
                }
              }
            },
            "description": "Successful response"
          },
          "400": {
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ValidationError"
                }
              }
            },
            "description": "Validation error"
          },
          "401": {
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/HTTPError"
                }
              }
            },
            "description": "Authentication error"
          }
        },
        "summary": "Insert a new event record",
        "description": "Insert a new event record with the given attributes. Its new EID is returned.",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/EventIn"
              }
            }
          }
        },
        "security": [
          {
            "ApiKeyAuth": []
          }
        ]
      }
    },
    "/database/recreate": {
      "post": {
        "parameters": [
          {
            "in": "query",
            "name": "confirmation",
            "required": false,
            "schema": {
              "type": "boolean",
              "default": false
            }
          }
        ],
        "responses": {
          "200": {
            "content": {
              "application/json": {
                "schema": {}
              }
            },
            "description": "Successful response"
          },
          "400": {
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ValidationError"
                }
              }
            },
            "description": "Validation error"
          },
          "401": {
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/HTTPError"
                }
              }
            },
            "description": "Authentication error"
          }
        },
        "summary": "Recreate the database schema",
        "description": "Recreate the database schema and insert sample data.\nRequest must be confirmed by passing query parameter.",
        "security": [
          {
            "ApiKeyAuth": []
          }
        ]
      }
    },
    "/patients/eid/{eid}": {
      "get": {
        "parameters": [
          {
            "in": "path",
            "name": "eid",
            "schema": {
              "type": "integer"
            },
            "required": true
          }
        ],
        "responses": {
          "200": {
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/EventOut"
                }
              }
            },
            "description": "Successful response"
          },
          "401": {
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/HTTPError"
                }
              }
            },
            "description": "Authentication error"
          },
          "404": {
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/HTTPError"
                }
              }
            },
            "description": "Not found"
          }
        },
        "summary": "Event record by EID",
        "description": "Retrieve a single event record by its EID",
        "security": [
          {
            "ApiKeyAuth": []
          }
        ]
      },
      "delete": {
        "parameters": [
          {
            "in": "path",
            "name": "eid",
            "schema": {
              "type": "integer"
            },
            "required": true
          }
        ],
        "responses": {
          "204": {
            "description": "Successful response"
          },
          "401": {
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/HTTPError"
                }
              }
            },
            "description": "Authentication error"
          },
          "404": {
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/HTTPError"
                }
              }
            },
            "description": "Not found"
          }
        },
        "summary": "Delete an event record by EID",
        "description": "Delete a single event record identified by its EID.",
        "security": [
          {
            "ApiKeyAuth": []
          }
        ]
      }
    },
    "/patients/name/{fname}": {
      "get": {
        "parameters": [
          {
            "in": "path",
            "name": "fname",
            "schema": {
              "type": "string"
            },
            "required": true
          }
        ],
        "responses": {
          "200": {
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/EventOut"
                }
              }
            },
            "description": "Successful response"
          },
          "401": {
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/HTTPError"
                }
              }
            },
            "description": "Authentication error"
          },
          "404": {
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/HTTPError"
                }
              }
            },
            "description": "Not found"
          }
        },
        "summary": "Event record by name",
        "description": "Retrieve a single event record by its short name",
        "security": [
          {
            "ApiKeyAuth": []
          }
        ]
      }
    }
  },
